<Project>
	
	<PropertyGroup>
		<NoWarn>$(NoWarn);CS1591;CS3014;CS3003;CS3001;CS3021</NoWarn>
		<RepositoryType>git</RepositoryType>
		<RepositoryUrl>https://github.com/castleproject/Core</RepositoryUrl>
		<BuildVersion Condition="'$(APPVEYOR_BUILD_VERSION)'==''">0.0.0</BuildVersion>
		<BuildVersion Condition="'$(APPVEYOR_BUILD_VERSION)'!=''">$(APPVEYOR_BUILD_VERSION)</BuildVersion>
	</PropertyGroup>

	<PropertyGroup>
		<Product>Castle Core</Product>
		<Version>$(BuildVersion)</Version>
		<AssemblyVersion>$(BuildVersion)</AssemblyVersion>
		<AssemblyTitle>Castle Project Core, including DynamicProxy, Logging Abstractions and DictionaryAdapter</AssemblyTitle>
		<Authors>Castle Project Contributors</Authors>
		<Copyright>Copyright 2004-$CurrentYear$ Castle Project - http://www.castleproject.org/</Copyright>
	</PropertyGroup>

	<PropertyGroup>
		<IsWindows Condition="'$(OsName)' == ''">true</IsWindows>
		<IsOSX Condition="'$(OsName)' == 'Darwin'">true</IsOSX>
		<IsLinux Condition="'$(OsName)' == 'Linux'">true</IsLinux>
	</PropertyGroup>

	<Target Name="PrintOSVariables" BeforeTargets="Build">
		<Message Text="OsName: $(OsName)" />
		<Message Text="IsOSX: $(IsOSX)" />
		<Message Text="IsLinux: $(IsLinux)" />
		<Message Text="IsWindows: $(IsWindows)" />
	</Target>

	<PropertyGroup>
		<DiagnosticsConstants>DEBUG</DiagnosticsConstants>
		<SharedNetStandardConstants>TRACE;FEATURE_NETCORE_REFLECTION_API;FEATURE_TEST_SERILOGINTEGRATION</SharedNetStandardConstants>
		<NetStandardConstants Condition="'$(IsWindows)'=='true'">$(SharedNetStandardConstants)</NetStandardConstants>
		<NetStandardConstants Condition="'$(IsWindows)'==''">$(SharedNetStandardConstants);FEATURE_TEST_STRONGNAMING</NetStandardConstants>
		<DesktopClrConstants>TRACE;DOTNET45;DOTNET40;FEATURE_APPDOMAIN;FEATURE_SYSTEM_CONVERTER;FEATURE_ISUPPORTINITIALIZE;FEATURE_DICTIONARYADAPTER_XML;FEATURE_BINDINGLIST;FEATURE_LISTSORT;FEATURE_IDATAERRORINFO;FEATURE_SERIALIZATION;FEATURE_GET_REFERENCED_ASSEMBLIES;FEATURE_SECURITY_PERMISSIONS;FEATURE_REMOTING;FEATURE_GAC;FEATURE_SYSTEM_CONFIGURATION;FEATURE_ASSEMBLYBUILDER_SAVE;FEATURE_TEST_SERILOGINTEGRATION</DesktopClrConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(TargetFramework)|$(Configuration)'=='net45|Debug'">
		<DefineConstants>$(DiagnosticsConstants);$(DesktopClrConstants)</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(TargetFramework)|$(Configuration)'=='net45|Release'">
		<DefineConstants>$(DesktopClrConstants)</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(TargetFramework)|$(Configuration)'=='net461|Debug'">
		<DefineConstants>$(DiagnosticsConstants);$(DesktopClrConstants)</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(TargetFramework)|$(Configuration)'=='net461|Release'">
		<DefineConstants>$(DesktopClrConstants)</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(TargetFramework)|$(Configuration)'=='netstandard1.3|Debug'">
		<DefineConstants>$(DiagnosticsConstants);$(NetStandardConstants)</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(TargetFramework)|$(Configuration)'=='netstandard1.3|Release'">
		<DefineConstants>$(NetStandardConstants)</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(TargetFramework)|$(Configuration)'=='netcoreapp1.1|Debug'">
		<DefineConstants>$(DiagnosticsConstants);$(NetStandardConstants)</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(TargetFramework)|$(Configuration)'=='netcoreapp1.1|Release'">
		<DefineConstants>$(NetStandardConstants)</DefineConstants>
	</PropertyGroup>

</Project>