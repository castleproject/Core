<?xml version="1.0" encoding="utf-8" ?> 
<configuration>

	<properties>	
		<prop1>prop1 value</prop1>
		<prop2>prop2 value</prop2>
		<prop3>
			<name>foo</name>
		</prop3>
	</properties>

	<facilities>
		<facility id="facility1" >
			<item>#{prop1}</item>
		</facility>
	
		<facility id="facility2" >
			<item value="#{prop2}" />
		</facility>	

		<facility id="facility3">
			<param1 attr="#{prop1}">#{prop3}</param1>
			<param1 attr="#{prop1}">#{prop2}</param1>
			<param2 attr="#{prop2}">#{prop1}</param2>
			<param3 attr="param3 attr"><value attr="param3 value attr">param3 value</value></param3>
		</facility>
	</facilities>

	<components>
	
		<component id="component1">
			<item>#{prop1}</item>
		</component>
		
		<component id="component2">
			<item value="#{prop2}"/>
		</component>

		<component id="component3">
			<item>#{prop3 @ name}</item>
		</component>

		<component id="component4">
			<item value="#{prop3 @ age}"/>
		</component>
	</components>
	
</configuration>
