{
  "version": "0.0.0",
  "description": "Castle.Core.Tests",
  "authors": [ "" ],
  "packOptions": {
    "tags": [ "" ],
    "projectUrl": "",
    "licenseUrl": ""
  },
  "dependencies": {
    "Castle.Core": {
      "target": "project",
      "version": ""
    },
    "Castle.Services.Logging.SerilogIntegration": {
      "target": "project",
      "version": ""
    },
    "Castle.Services.Logging.NLogIntegration": {
      "target": "project",
      "version": ""
    },
    "Serilog.Sinks.TextWriter": "2.0.0"
  },
  "testRunner": "nunit",
  "frameworks": {
    "netcoreapp1.0": {
      "imports": [
        "dnxcore50",
        "portable-net45+win8"
      ],
      "dependencies": {
        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.0.0"
        },
        "NUnit": "3.4.1",
        "dotnet-test-nunit": "3.4.0-beta-1"
      },
      "buildOptions": {
        "define": [ "FEATURE_TEST_SERILOGINTEGRATION" ]
      }
    }
  },
  "buildOptions": {
    "warningsAsErrors": true,
    "keyFile": "../../buildscripts/CastleKey.snk",
    "compile": {
      "exclude": [
        "Components.DictionaryAdapter.Tests/Xml/**/*",
        "log4netIntegration/**/*"
      ]
    },
    "embed": {
      "mappings": {
        "CastleTests.Core.Tests.Resources.MoreRes.TestRes": "Core.Tests/Resources/MoreRes/TestRes.resx",
        "CastleTests.Core.Tests.Resources.file1.txt": "Core.Tests/Resources/file1.txt"
      }
    },
    "copyToOutput": {
      "mappings": {
        "Core.Tests/Resources/file1.txt": "Core.Tests/Resources/file1.txt"
      }
    }
  }
}